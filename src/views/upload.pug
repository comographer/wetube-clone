extends base

block content 
    div 
        video#preview
        button#startBtn Start Recording
    if errorMessage 
        span=errorMessage
    form(method="POST" enctype="multipart/form-data") 
        label(for="video") Video File
        input(type="file" accept="video/*" if="video" name="video" required)
        input(placeholder="Title" type="text" name="title" maxlength="80" required)
        input(placeholder="Description" type="text" name="description" minlength="20" required)
        input(placeholder="Hashtags, separated by comma." type="text" name="hashtags" required)
        input(type="submit" value="Upload Video")

block scripts 
    script(src="/static/js/recorder.js")
